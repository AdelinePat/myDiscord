# Le compilateur √† utiliser
CC = gcc

# Options de compilation de base
CFLAGS = -Wall -Wextra -std=c11

# üí° Add this line:
LDFLAGS = -lws2_32

# Fichiers sources
SRC = ./client_connection.c

# Fichiers objets g√©n√©r√©s
OBJ = $(SRC:.c=.o)

# Nom de l'ex√©cutable
EXEC = client_main.exe

# Cible par d√©faut
all: $(EXEC)

# Cr√©ation de l'ex√©cutable
$(EXEC): $(OBJ)
	$(CC) $(OBJ) -o $(EXEC) $(LDFLAGS)

# Compilation des .c en .o
%.o: %.c
	$(CC) $(CFLAGS) -c $< -o $@

# Nettoyage
clean:
	@rm -f $(EXEC) $(OBJ)

# Recompilation totale
rebuild: clean all

# Ex√©cution rapide
run: all
	./$(EXEC)
